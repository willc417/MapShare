<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/viewNearbyMarkerLayout"
    tools:context=".ViewNearbyMarkerActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nearbyMarkerTitle"
        android:id="@+id/nearbyMarkerImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:textSize = "30dp"
        android:textStyle="bold"
        android:text="default"
        android:id="@+id/nearbyMarkerTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nearbyMarkerImage"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="default"
        android:id="@+id/nearbyMarkerDesc"/>
</RelativeLayout>
